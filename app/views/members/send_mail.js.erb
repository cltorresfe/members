    $("#flash_messages").html("<div class='alert <%= bootstrap_class_for(type) %> alert-dismissible' role='alert'><button class='close' data-dismiss='alert'>Ã—</button><%= message.html_safe %></div>")
  <%else%> 
    $("#flash_messages_error").html("<span class='label label-danger'><%= message.html_safe %></span>")
  <% end %>
<% end %>