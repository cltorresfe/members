- if(@members.present?)
  .row
    .col-md-12.col-sm-12.col-xs-12
      .box-body.no-padding
        .x_panel
          .x_title
            %h2
              = current_user.church.name
              %small
                = t('common.member', count: current_user.church.members.size)
            %ul.nav.navbar-right.panel_toolbox
              %li
                %a.collapse-link
                  %i.fa.fa-chevron-up
              %li
                %a.close-link
                  %i.fa.fa-close
            .clearfix
          .x_content
            .row
              .clearfix
              - @members.each do |member|
                .col-md-2.col-sm-3.col-xs-4
                  .thumbnail
                    .image.view.view-first
                      = link_to gravatar_image_tag(member.email, filetype: :png, rating: 'pg', class:'img-circle profile_img', secure: false, gravatar: { default: :mm }, :style => "width: 60%; display: block;" ), edit_member_path(member)
                      .mask
                        %p
                          = "#{member.first_name} #{member.last_name}"
                          %br Email:
                          = member.email
                        .tools.tools-bottom
                          = link_to edit_member_path(member) do
                            %i.glyphicon.glyphicon-pencil
                    .caption
                      = link_to edit_member_path(member) do
                        = member.first_name
              .col-md-12.col-sm-12.col-xs-12.text-center
                = will_paginate @members, :class => 'margin: 0px'
