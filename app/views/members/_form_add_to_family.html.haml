.row
  = simple_form_for @member, url: associated_family_member_path(@member.id), :method => :post, html: {class: 'form-horizontal'}do |f| 
    = f.input :role,:collection => Member.role_for_select,:include_blank => true
    .form-group
      .col-xs-offset-4
        = f.submit class: "btn btn-primary btn-lg"