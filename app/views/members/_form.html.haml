= render 'shared/errors', obj: @member
.row
  = form_for(@member, :html => {class: "form-horizontal", role: "form"} ) do |f|
    .form-group
      .col-xs-3.control-label
        = f.label :name
      .col-xs-7
        = f.text_field :name, class: "form-control", placeholder: :name, autofocus: true
    .form-group
      .col-xs-3.control-label
        = f.label :adress
      .col-xs-7
        = f.text_field :adress, class: "form-control", placeholder: :adress, autofocus: true
    .form-group
      .col-xs-3.control-label
        = f.label :email
      .col-xs-7
        = f.text_field :email, class: "form-control", placeholder: :email, autofocus: true
    .form-group
      .col-xs-3.control-label
        = f.label :phone
      .col-xs-7
        = f.text_field :phone, class: "form-control", placeholder: :phone, autofocus: true
    .form-group
      .col-xs-3.control-label
        = f.label :church
      .col-xs-7
        = f.select(:church_id, churches_for_select, {:include_blank => '-select-'}, class: "form-control", autofocus: true)
    - if @ministries
      .form-group
        .col-xs-3.control-label
          = f.label :charge_ids, 'Cargos'
        .col-xs-7
          #accordion.panel-group{"aria-multiselectable" => "true", :role => "tablist"}
            - @ministries.each do |ministry|
              .panel.panel-default
                .panel-heading{role: "tab", id: "heading-#{ministry.id}"}
                  %h4.panel-title
                    %a{"aria-controls" => "collapse-#{ministry.id}", "aria-expanded" => "false", "data-parent" => "#accordion", "data-toggle" => "collapse", :href => "#collapse-#{ministry.id}", :role => "button"}
                      = ministry.name
                .panel-collapse.collapse{"aria-labelledby" => "heading-#{ministry.id}", :role => "tabpanel", id: "collapse-#{ministry.id}"}
                  .panel-body
                    %ul
                      - ministry.charges.each do |charge|
                        %li
                          = check_box_tag 'member[charge_ids][]', charge.id, @member.charges.include?(charge)
                          = charge.responsibility.name

    .form-group
      .col-xs-3.control-label
        = f.label :status
      .col-xs-7
        = f.select(:status_id, statuses_for_select, {:include_blank => '-select-'}, class: "form-control", autofocus: true)
    .form-group
      .col-xs-offset-4
        = f.submit class: "btn btn-primary btn-lg"
