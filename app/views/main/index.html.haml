.row.top_tiles
  .animated.flipInY.col-lg-3.col-md-3.col-sm-6.col-xs-6
    .tile-stats.bg-aqua
      .icon
        %i.fa.fa-users
      .count= @families.size
      %h3= t('main.index.box_families')
      .small-box-footer
        = link_to families_path do 
          = t('link.more_info')
          .glyphicon.glyphicon-circle-arrow-right

  .animated.flipInY.col-lg-3.col-md-3.col-sm-6.col-xs-6
    .tile-stats.bg-green
      .icon
        %i.fa.fa-user-plus
      .count= @members.size
      %h3= t('main.index.box_members')
      .small-box-footer
        = link_to members_path do 
          = t('link.more_info')
          .glyphicon.glyphicon-circle-arrow-right
  .animated.flipInY.col-lg-3.col-md-3.col-sm-6.col-xs-6
    .tile-stats.bg-blue
      .icon
        %i.fa.fa-share-alt
      .count= @ministries.size
      %h3= t('main.index.box_ministries')
      .small-box-footer
        = link_to ministries_path do 
          = t('link.more_info')
          .glyphicon.glyphicon-circle-arrow-right
  .animated.flipInY.col-lg-3.col-md-3.col-sm-6.col-xs-6
    .tile-stats.bg-red
      .icon
        %%i.fa.fa-star
      .count=@responsibilities.length
      %h3= t('main.index.box_charges')
      .clearfix
      .small-box-footer
        = link_to responsibilities_path do 
          = t('link.more_info')
          .glyphicon.glyphicon-circle-arrow-right
.row
  - if(@members_last.present?)
    .col-md-6.col-sm-12.col-xs-12
      .box-body.no-padding
        .x_panel
          .x_title
            %h2
              %a.collapse-link.cursor
                .glyphicon.glyphicon.glyphicon-saved
                = t('main.index.title_last_persons')
            .clearfix
          .x_content{:style => "display: block;"}
            .box-body.no-padding
              .row
                - @members_last.each do |member|
                  .col-md-3.col-sm-3.col-xs-4
                    .thumbnail
                      .last
                        .image.view.view-first
                          = link_to gravatar_image_tag(member.email, filetype: :png, rating: 'pg', class:'img-circle img-responsive img-container', secure: false, gravatar: { default: :mm }, :style => "width: 60%; display: block;" ), edit_member_path(member)
                          .mask.mask-last
                            %p
                              = "#{member.first_name} #{member.last_name}"
                              %br Ingreso:
                              = member.created_at.strftime("%m/%d/%Y")
                            .tools.tools-bottom
                              = link_to edit_member_path(member) do
                                %i.glyphicon.glyphicon-pencil
                        .caption
                          = link_to edit_member_path(member) do
                            = member.first_name
  .col-md-3.col-sm-12.col-xs-12
    .box-body.no-padding
      .x_panel
        .x_title
          %h2
            %a.collapse-link.cursor
              .fa.fa-pie-chart
              = t('main.index.title_by_age')
          .clearfix
        .x_content{:style => "display: block;"}
          .box-body.no-padding
            .col-md-12.col-sm-12.col-xs-12
              #graph_donut_range{:style => "height: 240px;"}
  .col-md-3.col-sm-12.col-xs-12
    .box-body.no-padding
      .x_panel
        .x_title
          %h2
            %a.collapse-link.cursor
              .fa.fa-venus-mars
              = t('main.index.title_by_gender')
          .clearfix
        .x_content{:style => "display: block;"}
          .box-body.no-padding
            .col-md-12.col-sm-12.col-xs-12
              #graph_donut_gender{:style => "height: 240px;"}
.row
  - if @attendances.present?
    .col-md-5.col-sm-12.col-xs-12
      .box-body.no-padding
        .x_panel
          .x_title
            %h2
              %a.collapse-link.cursor
                .glyphicon.glyphicon.glyphicon-check
                = t('main.index.title_last_attendance')
