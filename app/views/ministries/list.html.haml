.container
  .row
    .col-sm-10.col-sm-offset-1
      #flash_messages
  .row
    .col-sm-10.col-sm-offset-1.text-right
      = link_to t('.new_ministry'), new_ministry_path, remote: true, class: "btn btn-primary"
  .row
    .col-sm-10.col-sm-offset-1
      %table.table
        %thead
          %tr
            %th= t('.name')
            %th= t('.members')
            %th= t('.charges')
            %th= t('.action')
            %th
        %tbody
          - @ministries.each do |ministry|
            = render "row", ministry: ministry

