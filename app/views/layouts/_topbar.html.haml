/ top navigation
.top_nav
  .nav_menu
    %nav{:role => "navigation"}
      .nav.toggle
        %a#menu_toggle
          %i.fa.fa-bars
      %ul.nav.navbar-nav.navbar-center
        %li.main-searchbar
          = form_for :search, url: search_path, method: :get do |f|
            = button_tag do
              %span.glyphicon.glyphicon-search
            = f.search_field :q, value: params[:q], placeholder: t('.searchbar'), autocomplete: 'off'
      %ul.nav.navbar-nav.navbar-right
        %li
          %a.user-profile.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "javascript:;"}
            = image_tag "avatar_2x.png"
            = current_user.name
            %span.fa.fa-angle-down
          %ul.dropdown-menu.dropdown-usermenu.pull-right
            %li
              = link_to edit_profile_path do
                %i.fa.fa-edit.pull-right
                = t('.profile')
            - if current_user.admin?
              %li
                = link_to sidekiq_web_path do
                  %i.fa.fa-signal.pull-right
                  = t('.sidekiq')
            %li
              = link_to destroy_user_session_path, method: :delete do
                %i.fa.fa-sign-out.pull-right
                = t('.destroy_session')
/ /top navigation
