.col-md-3.left_col
  .left_col.scroll-view
    .navbar.nav_title{:style => "border: 0;"}
      = link_to root_path , class: "site_title" do
        %i.glyphicon.glyphicon-grain
        %span
          = t('application')
    .clearfix
    / menu profile quick info
    .profile
      .profile_pic
        = image_tag "avatar_2x.png", :class => "img-circle profile_img"
      .profile_info
        %span Welcome,
        %h2= current_user.name
    / /menu profile quick info
    / sidebar menu
    .clearfix
    #sidebar-menu.main_menu_side.hidden-print.main_menu
      .menu_section
        %h3
        %ul.nav.side-menu
          %li
            %a
              %i.fa.fa-group.fa-fw
              = t('.members_link')
              %span.fa.fa-chevron-down
            %ul.nav.child_menu{:style => "display: none"}
              %li= link_to t('members.index.title'), members_path
              %li= link_to t('members.new.title'), new_member_path
              %li= link_to t('families.index.title'), families_path
              %li= link_to t('families.new.title'), new_family_path
          %li
            = link_to attendances_path do
              %i.fa.fa-check-square-o.fa-fw
              = t('.attendance_link')
          %li
            %a
              %i.fa.fa-building-o.fa-fw
              = t('.ministries_link')
              %span.fa.fa-chevron-down
            %ul.nav.child_menu{:style => "display: none"}
              %li= link_to t('ministries.index.title'), ministries_path
              %li= link_to t('ministries.new.title'), new_ministry_path
              %li= link_to t('ministries.new.title'), list_ministries_path
          %li
            %a
              %i.fa.fa-flag-o.fa-fw
              = t('.responsibilities_link')
              %span.fa.fa-chevron-down
            %ul.nav.child_menu{:style => "display: none"}
              %li= link_to t('responsibilities.index.title'), responsibilities_path
              %li= link_to t('responsibilities.new.title'), new_responsibility_path

    - if current_user.admin?
      / /sidebar menu
      / /menu footer buttons
      .sidebar-footer.hidden-small
        %a{"data-placement" => "top", "data-toggle" => "tooltip"}
          %span.glyphicon.option-horizontal{"aria-hidden" => "true"}
        = link_to destroy_user_session_path, method: :delete, data: { toggle: 'tooltip', placement: 'top', title: t('.destroy_session_link') } do
          %span.glyphicon.glyphicon-off{"aria-hidden" => "true"}
        %a
          %span.glyphicon.option-horizontal{"aria-hidden" => "true"}
      / /menu footer buttons
