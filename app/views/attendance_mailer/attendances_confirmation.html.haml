.title{:style => "color: #2A3F54;font-family: 'Helvetica Neue', Roboto, Arial, 'Droid Sans', sans-serif;"}
  %h2{:style => "padding-left: 23px;"}
    = t('.title')
    = @ministry.name
.panel{:style => "padding-left: 23px;color: #2A3F54;font-family: 'Helvetica Neue', Roboto, Arial, 'Droid Sans', sans-serif;"}
  .content{:style => "color: #2A3F54;font-family: 'Helvetica Neue', Roboto, Arial, 'Droid Sans', sans-serif;"}
    - if(@present_attendances.present?)
      = t('.content_attendance', percent: @percent_attendances, date: @attendance_date.strftime("%d/%m/%Y"))
      %p
        %table{:style => "border:1px solid #2A3F54;width:80%;border-collapse:collapse; "}
          %thead
            %tr{:style => "margin: 25px;padding-top: 5px;border-top: 1px solid; #eaeaea;"}
              %th{:style => "border:1px solid;padding:5px;"}= Member.human_attribute_name("first_name")
              %th{:style => "border:1px solid;padding:5px;"}= Member.human_attribute_name("last_name")
              %th{:style => "border:1px solid;padding:5px;"}= Member.human_attribute_name("address")
              %th{:style => "border:1px solid;padding:5px;"}= Member.human_attribute_name("email")
              %th{:style => "border:1px solid;padding:5px;"}= Member.human_attribute_name("phone")
          %tbody
          - @present_attendances.each do |attendance|
            %tr
              %td{:style => "border:1px solid;padding:5px;"}= attendance.member.first_name
              %td{:style => "border:1px solid;padding:5px;"}= attendance.member.last_name
              %td{:style => "border:1px solid;padding:5px;"}= attendance.member.address
              %td{:style => "border:1px solid;padding:5px;"}= attendance.member.email
              %td{:style => "border:1px solid;padding:5px;"}= attendance.member.phone
    - else
      = t('.content_empty_attendance')
      = @ministry.name
    - if(@absent_attendances.present?)
      = t('.content_nonattendance')
      %p
        %table{:style => "border:1px solid black;width:80%;border-collapse:collapse;color: #a94442; "}
          %thead{:style => "margin: 25px;padding-top: 5px;border-top: 1px solid; #a94442;"}
            %tr
              %th{:style => "border:1px solid;padding:5px;"}= Member.human_attribute_name("first_name")
              %th{:style => "border:1px solid;padding:5px;"}= Member.human_attribute_name("last_name")
              %th{:style => "border:1px solid;padding:5px;"}= Member.human_attribute_name("address")
              %th{:style => "border:1px solid;padding:5px;"}= Member.human_attribute_name("email")
              %th{:style => "border:1px solid;padding:5px;"}= Member.human_attribute_name("phone")
          %tbody
          - @absent_attendances.each do |attendance|
            %tr
              %td{:style => "border:1px solid;padding:5px;"}= attendance.member.first_name
              %td{:style => "border:1px solid;padding:5px;"}= attendance.member.last_name
              %td{:style => "border:1px solid;padding:5px;"}= attendance.member.address
              %td{:style => "border:1px solid;padding:5px;"}= attendance.member.email
              %td{:style => "border:1px solid;padding:5px;"}= attendance.member.phone
    - else
      =t('.content_full_attendance')
  .footer{:style => "line-height: 0.4;padding-top: 15px;"}
    %p= t('.footer')
    %p= @user.name
