<%= t('.title') %> <%= @ministry.name %>

<% if(@attendances.present.present?) %>
<%= t('.content_attendance', percent: @percent_attendances, date: @attendance_date.strftime("%d/%m/%Y"))%>

  <%= t('.first_name')%>	<%= t('.address')%>				<%= t('.email')%>	<%= t('.phone')%>
  <% @attendances.present.each do |attendance| %>
  <%=attendance.member.first_name %>	<%= attendance.member.address %>			<%= attendance.member.email %>	<%= attendance.member.phone %>
  <% end %>

<% else %>
  <%= t('.content_empty_attendance')%> <%= @ministry.name %>
<% end %>

<% if(@attendances.absent.present?) %>
<%= t('.content_nonattendance')%>

  <%= t('.first_name')%>	<%= t('.address')%>				<%= t('.email')%>	<%= t('.phone')%>
  <% @attendances.absent.each.each do |attendance| %>
  <%=attendance.member.first_name %>	<%= attendance.member.address %>			<%= attendance.member.email %>	<%= attendance.member.phone %>
  <% end %>

<% else %>
  <%= t('.content_full_attendance')%>
<% end %>

<%= t('.footer')%> 
<%= @user.name %>
